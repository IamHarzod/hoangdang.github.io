@model AnanasClone.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label">Giá</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="DiscountPercentage" class="control-label">Giảm giá (%)</label>
                            <input asp-for="DiscountPercentage" class="form-control" type="number" min="0" max="100" />
                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="control-label">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="StockQuantity" class="control-label">Số lượng</label>
                            <input asp-for="StockQuantity" class="form-control" type="number" min="0" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MainImage" class="control-label">Ảnh chính</label>
                    @if (!string.IsNullOrEmpty(Model.CurrentMainImage))
                    {
                        <div class="mb-2">
                            <img src="@Model.CurrentMainImage" alt="Ảnh chính" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }
                    <input asp-for="MainImage" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AdditionalImages" class="control-label">Ảnh phụ</label>
                    @if (Model.CurrentAdditionalImages != null && Model.CurrentAdditionalImages.Any())
                    {
                        <div class="row mb-2">
                            @foreach (var image in Model.CurrentAdditionalImages)
                            {
                                <div class="col-md-3 mb-2">
                                    <div class="position-relative">
                                        <img src="@image" alt="Ảnh phụ" class="img-thumbnail" style="width: 100%;" />
                                        <div class="form-check position-absolute top-0 end-0 m-2">
                                            <input type="checkbox" name="ImagesToDelete" value="@image" class="form-check-input" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    <input asp-for="AdditionalImages" class="form-control" type="file" accept="image/*" multiple />
                    <span asp-validation-for="AdditionalImages" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 