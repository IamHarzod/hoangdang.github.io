@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner Section -->
<div class="home-banner position-relative mb-5 rounded-4 overflow-hidden shadow-lg animate__animated animate__fadeInDown">
    <img src="/images/banners/Mobile_Homepage_Banner-copy-1.jpg" class="img-fluid w-100" alt="Banner Ananas" style="object-fit:cover; min-height:220px; max-height:400px;">
    <div class="banner-overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center text-white" style="background:rgba(0,0,0,0.35);">
        <h1 class="display-3 fw-bold mb-2">Welcome to <span class="text-warning">AnanasClone</span></h1>
        <p class="lead mb-4">Your one-stop shop for everything you need.</p>
        <a href="#featured-products" class="btn btn-lg btn-warning shadow-sm px-4 py-2">Khám phá ngay <i class="bi bi-arrow-right"></i></a>
    </div>
</div>

<!-- Feature Cards -->
<div class="row mb-5 animate__animated animate__fadeInUp animate__delay-1s">
    <div class="col-md-4 mb-3">
        <div class="card h-100 border-0 shadow-sm hover-shadow">
            <div class="card-body text-center">
                <i class="bi bi-star-fill text-warning display-5 mb-3"></i>
                <h5 class="card-title">Featured Products</h5>
                <p class="card-text">Check out our latest and most popular products.</p>
                <a href="#featured-products" class="btn btn-outline-warning">View Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 border-0 shadow-sm hover-shadow">
            <div class="card-body text-center">
                <i class="bi bi-gift-fill text-danger display-5 mb-3"></i>
                <h5 class="card-title">Special Offers</h5>
                <p class="card-text">Don't miss out on our exclusive deals and discounts.</p>
                <a href="#" class="btn btn-outline-danger">View Offers</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 border-0 shadow-sm hover-shadow">
            <div class="card-body text-center">
                <i class="bi bi-bag-plus-fill text-success display-5 mb-3"></i>
                <h5 class="card-title">New Arrivals</h5>
                <p class="card-text">Discover our newest products and collections.</p>
                <a href="#" class="btn btn-outline-success">View New Arrivals</a>
            </div>
        </div>
    </div>
</div>

<!-- Sản phẩm nổi bật -->
<h2 id="featured-products" class="mb-4 text-center fw-bold animate__animated animate__fadeInUp animate__delay-2s">Sản phẩm nổi bật</h2>
<div class="row justify-content-center animate__animated animate__fadeInUp animate__delay-2s">
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 border-0 shadow-lg product-card hover-scale">
            <div class="position-relative">
                <img src="/images/products/pro_A6T010_1.jpg" class="card-img-top rounded-top" alt="Sản phẩm 1" style="height:220px; object-fit:cover;">
                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">Mới</span>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title fw-bold">Vintas Saigon</h5>
                <p class="card-text text-danger fs-5">790.000đ</p>
                <a href="#" class="btn btn-warning w-100">Xem chi tiết <i class="bi bi-eye"></i></a>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 border-0 shadow-lg product-card hover-scale">
            <div class="position-relative">
                <img src="/images/products/pro_A61093_1_1.jpg" class="card-img-top rounded-top" alt="Sản phẩm 2" style="height:220px; object-fit:cover;">
                <span class="badge bg-danger position-absolute top-0 start-0 m-2">Hot</span>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title fw-bold">Urbas Corluray</h5>
                <p class="card-text text-danger fs-5">650.000đ</p>
                <a href="#" class="btn btn-danger w-100">Xem chi tiết <i class="bi bi-eye"></i></a>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 border-0 shadow-lg product-card hover-scale">
            <div class="position-relative">
                <img src="/images/products/pro_vintas_A61030_1.jpg" class="card-img-top rounded-top" alt="Sản phẩm 3" style="height:220px; object-fit:cover;">
                <span class="badge bg-success position-absolute top-0 start-0 m-2">Best Seller</span>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title fw-bold">Track 6 Class E</h5>
                <p class="card-text text-danger fs-5">1.200.000đ</p>
                <a href="#" class="btn btn-success w-100">Xem chi tiết <i class="bi bi-eye"></i></a>
            </div>
        </div>
    </div>
</div>

<!-- Scroll to top button -->
<button id="scrollTopBtn" class="btn btn-warning rounded-circle shadow position-fixed" style="bottom: 30px; right: 30px; display: none; z-index: 9999;">
    <i class="bi bi-arrow-up"></i>
</button>

<!-- Toast notification -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1055;">
    <div id="homeToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                Chào mừng bạn đến với AnanasClone!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Scroll to top
        const scrollBtn = document.getElementById('scrollTopBtn');
        window.onscroll = function() {
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                scrollBtn.style.display = 'block';
            } else {
                scrollBtn.style.display = 'none';
            }
        };
        scrollBtn.onclick = function() {
            window.scrollTo({top: 0, behavior: 'smooth'});
        };
        // Toast
        window.onload = function() {
            var toastEl = document.getElementById('homeToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 2500 });
                toast.show();
            }
        };
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
}
